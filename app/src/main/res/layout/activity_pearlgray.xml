<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pearlgray">

    <LinearLayout
        android:id="@+id/ptwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/four" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/ptwo"
        >
        <TextView
            android:id="@+id/pal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:text="Pashmina Arab Earl Gray"/>
        <TextView
            android:id="@+id/pal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pal1"
            android:text="SKU: PAEARLGRY"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/pal3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 60.000,00"
            android:layout_below="@id/pal2"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/pinkpastel"
            />
        <Button
            android:id="@+id/btnOrder"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:text="order now"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/pal3"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>

</RelativeLayout>