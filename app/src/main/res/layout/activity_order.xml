<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:orientation="vertical"
    tools:context=".orderhijab.ActivityOrder">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo5" />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_whit"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="5dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Barang" />

                    <EditText
                        android:id="@+id/edtNamaBarang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundwhite"
                        android:padding="10dp"
                        android:textSize="13dp"
                        tools:text="Barang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga Barang"
                        android:paddingTop="10dp"/>

                    <EditText
                        android:id="@+id/edtHargaSatuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundwhite"
                        android:padding="10dp"
                        android:textSize="13dp"
                        tools:text="1000,000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Pembeli"
                        android:paddingTop="10dp"/>

                    <EditText
                        android:id="@+id/edtNamaPembeli"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundwhite"
                        android:hint="Masukkan Nama Lengkap Anda"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alamat Pengiriman"
                        android:paddingTop="10dp"/>

                    <EditText
                        android:id="@+id/edtAlamat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundwhite"
                        android:hint="Masukkan Alamat Pengiriman"
                        android:inputType="textMultiLine"
                        android:padding="10dp"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nomor Handphone"
                        android:paddingTop="10dp"/>

                    <EditText
                        android:id="@+id/edtNoHP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundwhite"
                        android:hint="Masukkan Nomor Hp"
                        android:inputType="phone"
                        android:padding="10dp"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jumlah Barang"
                        android:paddingTop="10dp"/>

                    <EditText
                        android:id="@+id/edtJumlahBarang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundwhite"
                        android:hint="Masukkan Jumlah Barang"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Harga"
                        android:paddingTop="10dp"/>

                    <EditText
                        android:id="@+id/edtTotalHarga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundwhite"
                        tools:text="20,000,000"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textSize="13dp" />


                </LinearLayout>


            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Know"
                android:padding="15dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/round"
                android:paddingBottom="30dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"></View>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>